{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        {%- comment -%} change the action {%- endcomment -%}
        {%- comment -%} add values to input fields {%- endcomment -%}
        {%- comment -%} add a back button {%- endcomment -%}
        <form action="/dogs/{{dog.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{dog.name}}</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the dog"
                    value="{{ dog.name }}"
                >
                <label class="form-label">Color: </label>
                <input
                    class="form-control"
                    type="text"
                    name="breed"
                    placeholder="what breed is the dog?"
                    value="{{ dog.breed }}"
                >
                <label class="form-label">Easy to Train: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="easyToTrain"
                    {% if dog.easyToTrain %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Edit {{dog.name}}"
            >
        </form>
    </div>

{% endblock %}